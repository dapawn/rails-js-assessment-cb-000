<div class="jsindex">
<%= render 'assets/index' %>
<%= link_to 'Add Asset', new_applicant_asset_path(@applicant), class: "editAsset", layout: false, data: {toggle: "modal", target: "#formModal" } %>
</div>
<br>

<h1>Household Details: </h1>
<div class="jsindex">
<%= render 'household_members/index' %>
<%= link_to 'Add Household Member', new_applicant_household_member_path(@applicant), class: "editHouseholdMember", layout: false, data: {toggle: "modal", target: "#formModal" } %>
</div>
<br>

<h1>Request Details: </h1>
<div class="jsindex">
<%= render 'requests/index' %>
<%= link_to 'Add Request', new_applicant_request_path(@applicant), class: "editRequest", layout: false, data: {toggle: "modal", target: "#formModal" } %>
</div>
