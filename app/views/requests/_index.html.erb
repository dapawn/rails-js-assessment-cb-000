<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Cost</th>
      <th>Availability</th>
      <th>Business</th>
      <th>Benefit</th>
      <th>Why</th>
      <th>Recommentdation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Array(@requests).each do |request| %>
      <tr>
        <td><%= request.item %></td>
        <td><%= request.cost %></td>
        <td><%= request.availability %></td>
        <td><%= request.business %></td>
        <td><%= request.benefit %></td>
        <td><%= request.why %></td>
        <td><%= request.recommendation %></td>
	<!--        <td><%= link_to 'Show', applicant_request_path(@applicant, request) %></td> -->
        <td><%= link_to 'Edit', edit_applicant_request_path(@applicant, request),
                class: "editRequest",
                layout: false, 
                data: {toggle: "modal",
                       target: "#formModal", 
                       item: request.item,
                       cost: request.cost,
		       availability: request.availability,
		       business: request.business,
		       benefit: request.benefit,
		       why: request.why,
		       recommendation: request.recommendation
	              } %></td>
        <td><%= link_to 'Delete', [@applicant, request], class: "delete", layout: false, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

